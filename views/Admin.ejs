  <h2 class="login-title">Admin</h2>

  <form class="login-form" action="/Admin" method="post">
    <div>
      <label for="email">Email </label>
      <input
             id="email"
             type="email"
             placeholder="me@example.com"
             name="email"
             required
             />
    </div>

    <div>
      <label for="password">Password </label>
      <input
             id="password"
             type="password"
             placeholder="password"
             name="password"
             required
             />
    </div>
    <button class="btn btn--form" type="submit" value="admin">
      Log in
    </button>
  </form>
